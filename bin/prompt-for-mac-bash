#!/usr/bin/env ruby

module Prompt
  module_function
  def time
    Time.now.strftime('%H:%M')
  end

  def cwd
    Dir.pwd.sub(/^#{ENV['HOME']}/, '~').gsub(/(\w).*?\//, '\1/')
  end

  def dirty
    case `git status --porcelain 2> /dev/null`
      when ''
        ''   # clean
      when /\A(^[AMDR]  [^\n]+\n)+\Z/
        '#' # all staged
      else
        '*' # dirty
    end
  end

  def branch
    return '' if (branch = `git branch 2> /dev/null`).empty?
    branch.match(/\* (.+)/)[1]
  end

  def dirty_branch
    (s = dirty + branch).empty? ? '' : " #{s}"
  end

  def prompt
    "#{green{time}} #{green{cwd}}#{cyan{dirty_branch}}$ "
  end

  # utility

  def green &block
    color(32, &block)
  end

  def cyan &block
    color(36, &block)
  end

  def normal &block
    color('', &block)
  end

  def color rgb
    "\033[#{rgb}m" + (block_given? ? "#{yield}#{normal}" : '')
  end
end

print Prompt.prompt
