  remote = staging
[user]
  name = Lin Jen-Shin
  email = godfat@godfat.org
[mailmap]
  file = ~/.config/git.mailmap.txt
[sendemail]
  smtpencryption = tls
  smtpserver = smtp.gmail.com
  smtpuser = godfat@godfat.org
  smtpserverport = 587
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
[diff]
  renames = copy
[push]
  default = tracking
[merge]
  log = true
[rebase]
  stat = true

# https://git.wiki.kernel.org/index.php/Aliases
[alias]
  st = status
  co = checkout
  ci = commit

  logg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

  whatnext = !git describe --tags --abbrev=0 --match '*[0-9].[0-9]' | xargs git diff
  rollback = reset --hard
  staged = diff --staged
  contri = shortlog -sn
  rmall = !git status | grep 'deleted:' | sed -E 's/.*\\deleted: +(.+)$/\\1/' | sed 's/ /\\\\ /g' | xargs git rm
  aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'

