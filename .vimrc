scriptencoding utf-8

set encoding=utf-8
set fileencoding=utf-8
set fenc=utf-8
set termencoding=utf-8

set noautoindent             " this is annoying when pasting from clipboard
set nocompatible

set bs=2                     " backspace
set softtabstop=2            " soft tab
set scrolloff=3
set cmdheight=2
set shiftwidth=2
set cmdheight=2
set history=1000

syntax on
filetype on
filetype plugin on
filetype indent on

set wildmenu
set wildmode=list:longest

set ruler
set hidden
set title
set ignorecase
set smartcase

set backupdir=~/tmp,/tmp
set directory=~/tmp,/tmp
"set nobackup
"set nowritebackup
"set noswapfile
