{
  "name": "twilight",
  "displayName": "Twilight",
  "description": "TextMate Twilight dark theme and other random things",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": ["Themes", "Snippets"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./main.js",
  "contributes": {
    "themes": [
      {
        "label": "Twilight",
        "uiTheme": "vs-dark",
        "path": "./twilight.json"
      }
    ],
    "snippets": [
      {
        "language": "ruby",
        "path": "./ruby/snippets.json"
      }
    ],
    "languages": [
      {
        "id": "ruby",
        "configuration": "./ruby/configuration.json"
      }
    ],
    "keybindings": [
      {
        "key": "escape",
        "command": "twilight.textComplete",
        "when": "editorTextFocus && !editorHasMultipleSelections && !inDiffEditor && !suggestWidgetVisible"
      },
      {
        "key": "cmd+v",
        "command": "-editor.action.clipboardPasteAction",
        "when": "editorTextFocus"
      },
      {
        "key": "cmd+v",
        "command": "twilight.indentPaste",
        "when": "editorTextFocus"
      },
      {
        "key": "shift+3",
        "command": "twilight.stringInterpolate",
        "when": "editorTextFocus && editorLangId == ruby"
      },
      {
        "key": "/",
        "command": "twilight.tagComplete",
        "when": "editorTextFocus && editorLangId == erb"
      },
      {
        "key": "cmd+t",
        "command": "workbench.action.quickOpen"
      },
      {
        "key": "shift+cmd+c",
        "command": "workbench.action.showCommands"
      },
      {
        "key": "shift+cmd+f",
        "command": "search.action.openNewEditor"
      },
      {
        "key": "ctrl+left",
        "command": "cursorWordPartLeft",
        "when": "textInputFocus"
      },
      {
        "key": "ctrl+right",
        "command": "cursorWordPartRight",
        "when": "textInputFocus"
      },
      {
        "key": "ctrl+shift+left",
        "command": "cursorWordPartLeftSelect",
        "when": "textInputFocus"
      },
      {
        "key": "ctrl+shift+right",
        "command": "cursorWordPartRightSelect",
        "when": "textInputFocus"
      },
      {
        "key": "shift+alt+up",
        "command": "editor.action.insertCursorAbove",
        "when": "editorTextFocus"
      },
      {
        "key": "shift+alt+down",
        "command": "editor.action.insertCursorBelow",
        "when": "editorTextFocus"
      }
    ],
    "commands": [
      {
        "command": "twilight.textComplete",
        "title": "Text complete",
        "category": "Twilight"
      },
      {
        "command": "twilight.indentPaste",
        "title": "Indent paste",
        "category": "Twilight"
      },
      {
        "command": "twilight.stringInterpolate",
        "title": "Wrap #{} or insert #",
        "when": "editorTextFocus && editorLangId == ruby",
        "category": "Twilight"
      },
      {
        "command": "twilight.tagComplete",
        "when": "editorTextFocus && editorLangId == erb",
        "title": "Complete HTML Tag or insert /"
      },
      {
        "command": "twilight.copyRelativeFilePath",
        "title": "Copy relative file path",
        "category": "Twilight"
      },
      {
        "command": "twilight.copyFilePath",
        "title": "Copy absolute file path",
        "category": "Twilight"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "twilight.copyRelativeFilePath",
          "group": "navigation@0.01"
        },
        {
          "command": "twilight.copyFilePath",
          "group": "navigation@0.02"
        }
      ]
    }
  }
}
